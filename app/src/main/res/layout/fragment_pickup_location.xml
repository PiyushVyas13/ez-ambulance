<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".component.dashboard.owner.trip.ui.PickupLocationFragment">

    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:hint="@string/street_address"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/primary"
        app:boxStrokeErrorColor="@color/error"
        app:boxStrokeWidth="@dimen/_2sdp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/primary"
        app:startIconTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/customer_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textStyle="bold|italic" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:hint="@string/landmark"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/primary"
        app:boxStrokeErrorColor="@color/error"
        app:boxStrokeWidth="@dimen/_2sdp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/primary"
        app:suffixText="@string/gmailend_text"
        app:suffixTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textStyle="bold|italic" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:hint="@string/city_text"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/primary"
        app:boxStrokeErrorColor="@color/error"
        app:boxStrokeWidth="@dimen/_2sdp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/primary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textStyle="bold|italic" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/address_state"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeErrorColor="@color/error"
            android:layout_weight="1"
            app:boxStrokeWidth="@dimen/_2sdp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/primary"
            app:startIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textStyle="bold|italic" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/address_pin_code"
            android:textColorHint="@color/black"
            android:layout_marginStart="@dimen/_8sdp"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeErrorColor="@color/error"
            app:boxStrokeWidth="@dimen/_2sdp"
            app:endIconMode="clear_text"
            android:layout_weight="1"
            app:endIconTint="@color/primary"
            app:suffixText="@string/gmailend_text"
            app:suffixTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp"
                android:inputType="number"
                android:textColor="@color/black"
                android:textStyle="bold|italic" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_weight="1"
        />

</LinearLayout>